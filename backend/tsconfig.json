{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "baseUrl": ".", // alright
    "paths": { // this should probably support absolute paths, but that's for later
      "@/*": ["./src/*"]
    },
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },

  "include": [
    "./src/**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}